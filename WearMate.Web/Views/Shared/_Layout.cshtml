@using System.Text.Json
@{
    var userJson = Context.Session.GetString("UserSession");
    var isLoggedIn = !string.IsNullOrEmpty(userJson);
    var userName = "User";
    var userRole = string.Empty;

    if (isLoggedIn)
    {
        try
        {
            var sessionData = JsonSerializer.Deserialize<JsonElement>(userJson!);
            userName = sessionData.GetProperty("User").GetProperty("FullName").GetString() ?? "User";
            userRole = sessionData.GetProperty("User").GetProperty("Role").GetString() ?? "";
        }
        catch { }
    }

    // Cart count (nếu có)
    int cartCount = ViewBag.CartCount != null ? (int)ViewBag.CartCount : 0;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - WearMate</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Outfit:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- Alpine.js -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- ========================= HEADER ========================= -->
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg py-3 glass-effect border-bottom border-white border-opacity-25 shadow-sm">
            <div class="container">
                <!-- LOGO -->
                <a class="navbar-brand d-flex align-items-center gap-3" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logowearmate.png" alt="WearMate Logo">
                    <span style="font-family: var(--font-heading); font-weight: 700; font-size: 2rem; letter-spacing: -0.5px; line-height: 1;" class="text-gradient">WearMate</span>
                </a>


                <!-- TOGGLE -->
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <!-- MENU -->
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0 gap-lg-4">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">@Localizer["Home"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Index">@Localizer["Products"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Index" asp-route-category="new">@Localizer["NewArrivals"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger fw-bold" asp-controller="Products" asp-action="Index" asp-route-category="sale">@Localizer["FlashSale"]</a>
                        </li>
                    </ul>

                    <!-- ACTION ICONS -->
                    <div class="d-flex align-items-center gap-3">
                        <!-- SEARCH -->
                        <a asp-controller="Search" asp-action="Index" class="btn btn-link nav-link p-0 hover-lift">
                            <i class="bi bi-search fs-5"></i>
                        </a>

                        <!-- ACCOUNT -->
                        @if (isLoggedIn)
                        {
                            <div class="dropdown">
                                <a class="btn btn-link nav-link p-0 dropdown-toggle d-flex align-items-center gap-2 hover-lift" role="button" data-bs-toggle="dropdown">
                                    <div class="bg-light rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 35px; height: 35px;">
                                        <i class="bi bi-person fs-5 text-primary"></i>
                                    </div>
                                    <span class="d-none d-lg-block small fw-medium">@userName</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg p-2 rounded-3 mt-2 glass-effect">
                                    <li><a class="dropdown-item rounded-2" asp-controller="Account" asp-action="Profile"><i class="bi bi-person me-2"></i>@Localizer["Profile"]</a></li>
                                    <li><a class="dropdown-item rounded-2" asp-controller="Account" asp-action="Orders"><i class="bi bi-box-seam me-2"></i>@Localizer["Orders"]</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button class="dropdown-item rounded-2 text-danger"><i class="bi bi-box-arrow-right me-2"></i>@Localizer["Logout"]</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a class="btn btn-primary btn-sm px-4 rounded-pill shadow-sm hover-lift" asp-controller="Account" asp-action="Login">@Localizer["Login"]</a>
                        }

                        <!-- LANGUAGE SWITCHER -->
                        <partial name="_LanguageSwitcher" />

                        <!-- CART -->
                        <a asp-controller="Cart" asp-action="Index" class="btn btn-link nav-link p-0 position-relative hover-lift">
                            <i class="bi bi-bag fs-5"></i>
                            @if (cartCount > 0)
                            {
                                <span class="cart-badge shadow-sm">@cartCount</span>
                            }
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- ========================= BODY CONTENT ========================= -->
    <main class="flex-grow-1">
        @RenderBody()
    </main>

    <!-- ========================= FOOTER ========================= -->
    <footer class="footer pt-5 pb-3 mt-auto text-white" style="background: var(--gradient-dark);">
        <div class="container">
            <div class="row g-4 mb-5">
                <!-- Brand Info -->
                <div class="col-lg-4 col-md-6">
                    <div class="d-flex align-items-center gap-2 mb-3">
                        <img src="~/images/logowearmate.png" style="height:32px; filter: brightness(0) invert(1);" alt="WearMate Logo">
                        <span class="h4 mb-0 text-white" style="font-family: var(--font-heading);">WearMate</span>
                    </div>
                    <p class="text-white-50 mb-4">Nâng tầm phong cách của bạn với bộ sưu tập thời trang hiện đại, chất lượng cao và bền vững.</p>
                    <div class="d-flex gap-3">
                        <a href="#" class="btn btn-outline-light btn-sm rounded-circle hover-lift" style="width: 32px; height: 32px; padding: 0; display: flex; align-items: center; justify-content: center;"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="btn btn-outline-light btn-sm rounded-circle hover-lift" style="width: 32px; height: 32px; padding: 0; display: flex; align-items: center; justify-content: center;"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="btn btn-outline-light btn-sm rounded-circle hover-lift" style="width: 32px; height: 32px; padding: 0; display: flex; align-items: center; justify-content: center;"><i class="bi bi-tiktok"></i></a>
                    </div>
                </div>

                <!-- Links -->
                <div class="col-lg-2 col-md-6">
                    <h6 class="text-white fw-bold mb-3">@Localizer["Products"]</h6>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Products" asp-action="Index" class="footer-link text-white-50 hover-text-white">@Localizer["ViewAll"]</a></li>
                        <li><a asp-controller="Products" asp-action="Index" asp-route-category="new" class="footer-link text-white-50 hover-text-white">@Localizer["NewArrivals"]</a></li>
                        <li><a asp-controller="Products" asp-action="Index" asp-route-category="sale" class="footer-link text-white-50 hover-text-white">@Localizer["FlashSale"]</a></li>
                        <li><a asp-controller="Products" asp-action="Index" asp-route-category="popular" class="footer-link text-white-50 hover-text-white">@Localizer["BestSellers"]</a></li>
                    </ul>
                </div>

                <div class="col-lg-2 col-md-6">
                    <h6 class="text-white fw-bold mb-3">@Localizer["Support"]</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="footer-link text-white-50 hover-text-white">@Localizer["HelpCenter"]</a></li>
                        <li><a href="#" class="footer-link text-white-50 hover-text-white">@Localizer["SizeGuide"]</a></li>
                        <li><a href="#" class="footer-link text-white-50 hover-text-white">@Localizer["Returns"]</a></li>
                        <li><a href="#" class="footer-link text-white-50 hover-text-white">@Localizer["TrackOrder"]</a></li>
                    </ul>
                </div>

                <!-- Newsletter -->
                <div class="col-lg-4 col-md-6">
                    <h6 class="text-white fw-bold mb-3">@Localizer["Newsletter"]</h6>
                    <p class="text-white-50 small mb-3">@Localizer["NewsletterDesc"]</p>
                    <form class="d-flex gap-2">
                        <input type="email" class="form-control bg-white bg-opacity-10 border-0 text-white placeholder-white-50" placeholder="@Localizer["EmailPlaceholder"]">
                        <button class="btn btn-primary px-4 hover-glow">@Localizer["Subscribe"]</button>
                    </form>
                </div>
            </div>

            <hr class="border-white opacity-10">

            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center py-3 text-white-50 small">
                <div>© @DateTime.Now.Year WearMate. All rights reserved.</div>
                <div class="d-flex gap-3 mt-2 mt-md-0">
                    <a href="#" class="text-white-50 text-decoration-none hover-text-white">@Localizer["TermsOfService"]</a>
                    <a href="#" class="text-white-50 text-decoration-none hover-text-white">@Localizer["PrivacyPolicy"]</a>
                    <a href="#" class="text-white-50 text-decoration-none hover-text-white">Cookie</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

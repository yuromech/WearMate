@model List<WearMate.Web.Models.ViewModels.CartItemViewModel>
@{
    ViewData["Title"] = "Giỏ hàng";
}

<div class="container py-5">
    <h1 class="fw-bold mb-4" style="font-family: var(--font-heading);">Giỏ hàng của bạn</h1>

    @if (Model.Any())
    {
        <div class="row g-5">
            <!-- Cart Items -->
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="py-3 border-0 ps-4" style="width:40px;">
                                            <input type="checkbox" id="selectAll" class="form-check-input" />
                                        </th>
                                        <th class="py-3 border-0">Sản phẩm</th>
                                        <th class="py-3 border-0">Giá</th>
                                        <th class="py-3 border-0">Số lượng</th>
                                        <th class="py-3 border-0">Tổng</th>
                                        <th class="py-3 pe-4 border-0"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="ps-4 py-3">
                                                <input type="checkbox" name="selectedVariantIds" value="@item.ProductVariantId" class="form-check-input item-checkbox" checked />
                                            </td>
                                            <td class="ps-4 py-3">
                                                <div class="d-flex align-items-center gap-3">
                                                    <div class="bg-light rounded-3 d-flex align-items-center justify-content-center overflow-hidden" style="width: 60px; height: 60px;">
                                                        @if (!string.IsNullOrWhiteSpace(item.ProductImage))
                                                        {
                                                            <img src="@item.ProductImage" alt="@item.ProductName" class="w-100 h-100 object-fit-cover" />
                                                        }
                                                        else
                                                        {
                                                            <i class="bi bi-bag text-muted fs-4"></i>
                                                        }
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0 fw-semibold">@item.ProductName</h6>
                                                        <small class="text-muted">Biến thể: @(item.VariantInfo ?? item.ProductVariantId.ToString())</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="py-3">@item.Price.ToString("N0") đ</td>
                                            <td class="py-3">
                                                <form asp-action="UpdateQuantity" method="post" class="d-flex align-items-center gap-2">
                                                    <input type="hidden" name="productVariantId" value="@item.ProductVariantId" />
                                                    <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control form-control-sm text-center" style="width: 60px;">
                                                    <button type="submit" class="btn btn-sm btn-link text-muted p-0" title="Cập nhật"><i class="bi bi-arrow-clockwise"></i></button>
                                                </form>
                                            </td>
                                            <td class="py-3 fw-bold">@item.TotalPrice.ToString("N0") đ</td>
                                            <td class="pe-4 py-3 text-end">
                                                <form asp-action="RemoveItem" method="post">
                                                    <input type="hidden" name="productVariantId" value="@item.ProductVariantId" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger border-0 rounded-circle" style="width: 32px; height: 32px;"><i class="bi bi-trash"></i></button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                
                <div class="mt-4">
                    <a asp-controller="Products" asp-action="Index" class="text-decoration-none text-muted"><i class="bi bi-arrow-left me-2"></i>Tiếp tục mua sắm</a>
                </div>
            </div>

            <!-- Summary -->
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm rounded-4 bg-light">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-4">Tổng đơn hàng</h5>
                        
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">Tạm tính</span>
                            <span class="fw-bold">@Model.Sum(x => x.TotalPrice).ToString("N0") đ</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">Vận chuyển</span>
                            <span class="text-success">Miễn phí</span>
                        </div>
                        
                        <hr class="my-4">
                        
                        <div class="d-flex justify-content-between mb-4">
                            <span class="h5 fw-bold">Tổng cộng</span>
                            <span class="h4 fw-bold text-primary">@Model.Sum(x => x.TotalPrice).ToString("N0") đ</span>
                        </div>

                        <button type="button" id="checkoutSelected" class="btn btn-primary w-100 rounded-pill py-3 fw-bold shadow-sm">
                            Thanh toán sản phẩm đã chọn
                        </button>
                        
                        <div class="mt-4 text-center">
                            <small class="text-muted d-block mb-2">Chúng tôi chấp nhận</small>
                            <div class="d-flex justify-content-center gap-2 text-muted fs-4">
                                <i class="bi bi-credit-card"></i>
                                <i class="bi bi-paypal"></i>
                                <i class="bi bi-cash-coin"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 100px; height: 100px;">
                    <i class="bi bi-cart-x fs-1 text-muted"></i>
                </div>
            </div>
            <h3 class="fw-bold mb-3">Giỏ hàng trống</h3>
            <p class="text-muted mb-4">Bạn chưa thêm sản phẩm nào vào giỏ hàng.</p>
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary rounded-pill px-5 py-2">Mua sắm ngay</a>
        </div>
    }
</div>

<script>
    const selectAll = document.getElementById('selectAll');
    const itemCheckboxes = document.querySelectorAll('.item-checkbox');
    const checkoutBtn = document.getElementById('checkoutSelected');
    if (selectAll) {
        selectAll.addEventListener('change', () => {
            itemCheckboxes.forEach(cb => cb.checked = selectAll.checked);
        });
    }
    if (checkoutBtn) {
        checkoutBtn.addEventListener('click', () => {
            const selected = Array.from(itemCheckboxes)
                .filter(cb => cb.checked)
                .map(cb => cb.value);
            if (!selected.length) {
                alert('Vui lòng chọn ít nhất 1 sản phẩm để thanh toán.');
                return;
            }
            const params = selected.map(id => `selectedVariantIds=${encodeURIComponent(id)}`).join('&');
            const url = '@Url.Action("Index", "Checkout")' + '?' + params;
            window.location.href = url;
        });
    }
</script>


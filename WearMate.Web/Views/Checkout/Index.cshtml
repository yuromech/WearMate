@model WearMate.Web.Models.ViewModels.CheckoutViewModel
@{
    ViewData["Title"] = "Thanh toán";
    var total = Model.Subtotal + Model.ShippingFee;
    var transferContent = $"{DateTime.Now.Ticks.ToString().Substring(8)}";
}

<div class="container py-5">
    <h1 class="fw-bold mb-4" style="font-family: var(--font-heading);">Thanh toán</h1>

    <div class="row g-4">
        <!-- Thông tin giao hàng -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-4">Thông tin giao hàng</h5>
                    <form asp-action="PlaceOrder" method="post" id="checkoutForm">
                        @foreach (var vid in Model.SelectedVariantIds)
                        {
                            <input type="hidden" name="SelectedVariantIds" value="@vid" />
                        }
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="ShippingFullName" class="form-label">Họ tên *</label>
                                <input asp-for="ShippingFullName" class="form-control" required />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ShippingPhone" class="form-label">Số điện thoại *</label>
                                <input asp-for="ShippingPhone" class="form-control" required />
                            </div>
                            <div class="col-12">
                                <label asp-for="ShippingAddress" class="form-label">Địa chỉ *</label>
                                <input asp-for="ShippingAddress" class="form-control" required />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ShippingCity" class="form-label">Tỉnh/Thành *</label>
                                <input asp-for="ShippingCity" class="form-control" required />
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Phương thức thanh toán -->
                        <h5 class="fw-bold mb-3">Phương thức thanh toán</h5>
                        <div class="vstack gap-3">
                            <div class="form-check border rounded-3 p-3">
                                <input class="form-check-input" type="radio" name="PaymentMethod" id="pm-cod" value="cod" checked>
                                <label class="form-check-label fw-semibold" for="pm-cod">
                                    Thanh toán khi nhận hàng (COD)
                                </label>
                                <div class="text-muted small mt-1">Bạn sẽ thanh toán tiền mặt khi nhận hàng.</div>
                            </div>
                            <div class="form-check border rounded-3 p-3">
                                <input class="form-check-input" type="radio" name="PaymentMethod" id="pm-bank" value="bank_transfer">
                                <label class="form-check-label fw-semibold" for="pm-bank">
                                    Chuyển khoản qua VietQR
                                </label>
                                <div class="row align-items-center mt-2 g-3">
                                    <div class="col-md-4">
                                        <img src="https://img.vietqr.io/image/970415-0000000000-qr_only.png?amount=@total"
                                             class="img-fluid rounded-3 border"
                                             alt="VietQR"
                                             onerror="this.src='https://placehold.co/300x300?text=VietQR';" />
                                    </div>
                                    <div class="col-md-8">
                                        <ul class="list-unstyled small text-muted mb-0">
                                            <li>Số tiền: <strong>@total.ToString("N0") đ</strong></li>
                                            <li>Nội dung: <strong>@transferContent</strong></li>
                                            <li>Quét mã VietQR để chuyển khoản.</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-3 mt-4">
                            <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                                <i class="bi bi-arrow-left me-1"></i> Quay lại giỏ hàng
                            </a>
                            <button type="submit" class="btn btn-primary rounded-pill px-5 fw-bold">
                                Đặt hàng
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Tóm tắt đơn hàng -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-4">Tóm tắt đơn hàng</h5>
                    <div class="vstack gap-3 mb-4">
                        @foreach (var item in Model.CartItems)
                        {
                            <div class="d-flex align-items-center gap-3">
                                <div class="rounded-3 bg-light overflow-hidden" style="width:64px;height:64px;">
                                    <img src="@item.ProductImage" alt="@item.ProductName" class="w-100 h-100 object-fit-cover" onerror="this.src='/images/product-placeholder.png';" />
                                </div>
                                <div class="flex-grow-1">
                                    <div class="fw-semibold">@item.ProductName</div>
                                    <div class="text-muted small">@item.VariantInfo</div>
                                    <div class="text-muted small">x @item.Quantity</div>
                                </div>
                                <div class="fw-bold">@item.TotalPrice.ToString("N0") đ</div>
                            </div>
                        }
                    </div>

                    <hr>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Tạm tính</span>
                        <span class="fw-bold">@Model.Subtotal.ToString("N0") đ</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Phí vận chuyển</span>
                        <span class="fw-bold">@Model.ShippingFee.ToString("N0") đ</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Giảm giá</span>
                        <span class="fw-bold text-success">0 đ</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="h5 fw-bold mb-0">Tổng</span>
                        <span class="h4 fw-bold text-primary mb-0">@total.ToString("N0") đ</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@using WearMate.Shared.DTOs.Common
@using WearMate.Shared.DTOs.Products
@model PaginatedResult<ProductDto>
@{
    ViewData["Title"] = "Products Management";
    var categories = ViewBag.Categories as List<CategoryDto> ?? new();
    var brands = ViewBag.Brands as List<BrandDto> ?? new();
    var selectedCategoryId = ViewBag.SelectedCategoryId as Guid?;
    var selectedBrandId = ViewBag.SelectedBrandId as Guid?;
    var searchQuery = ViewBag.SearchQuery as string;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="bi bi-box-seam"></i> Products Management</h2>
        <p class="text-muted mb-0">Manage your product catalog</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Export" class="btn btn-outline-secondary">
            <i class="bi bi-download"></i> Export
        </a>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Product
        </a>
    </div>
</div>

<!-- Filters Card -->
<div class="card mb-3 shadow-sm">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label small text-muted mb-1">Search</label>
                <input type="text" name="search" value="@searchQuery" class="form-control" 
                       placeholder="Search by name or SKU..." />
            </div>
            <div class="col-md-3">
                <label class="form-label small text-muted mb-1">Category</label>
                <select name="categoryId" class="form-select">
                    <option value="">All Categories</option>
                    @foreach (var c in categories)
                    {
                        <option value="@c.Id" selected="@(selectedCategoryId.HasValue && selectedCategoryId.Value == c.Id ? "selected" : null)">
                            @c.Name
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label small text-muted mb-1">Brand</label>
                <select name="brandId" class="form-select">
                    <option value="">All Brands</option>
                    @foreach (var b in brands)
                    {
                        <option value="@b.Id" selected="@(selectedBrandId.HasValue && selectedBrandId.Value == b.Id ? "selected" : null)">
                            @b.Name
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label small text-muted mb-1">Status</label>
                <select name="status" class="form-select">                    
                    <option value="active" selected="@(ViewBag.CurrentStatus == "active" ? "selected" : null)">Active</option>
                    <option value="inactive" selected="@(ViewBag.CurrentStatus == "inactive" ? "selected" : null)">Inactive</option>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button class="btn btn-primary w-100" type="submit">
                    <i class="bi bi-search"></i> Filter
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Products Table Card -->
<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 80px;">Image</th>
                        <th>Product</th>
                        <th style="width: 150px;">Category</th>
                        <th style="width: 150px;">Brand</th>
                        <th style="width: 120px;" class="text-end">Price</th>
                        <th style="width: 100px;" class="text-center">Status</th>
                        <th style="width: 100px;" class="text-center">Featured</th>
                        <th style="width: 100px;" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items.Any())
                    {
                        @foreach (var product in Model.Items)
                        {
                            <tr>
                                <td>
                                    <img src="@WearMate.Shared.Helpers.ImageHelper.GetProductImage(product.ThumbnailUrl)" 
                                         alt="@product.Name" 
                                         class="rounded" 
                                         style="width: 40px; height: 40px; object-fit: cover;" 
                                         onerror="this.src='/images/product-placeholder.png'" />
                                </td>
                                <td>
                                    <div class="fw-bold">@product.Name</div>
                                    <div class="small text-muted">SKU: @product.Sku</div>
                                    <div class="small text-muted mt-1">
                                        <i class="bi bi-link-45deg"></i> @product.Slug
                                    </div>
                                </td>
                                <td>
                                    @if (product.Category != null)
                                    {
                                        <span class="badge bg-info bg-opacity-10 text-info">
                                            <i class="bi bi-tag"></i> @product.Category.Name
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">—</span>
                                    }
                                </td>
                                <td>
                                    @if (product.Brand != null)
                                    {
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary">
                                            <i class="bi bi-award"></i> @product.Brand.Name
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">—</span>
                                    }
                                </td>
                                <td class="text-end">
                                    @if (product.SalePrice.HasValue && product.SalePrice.Value < product.BasePrice)
                                    {
                                        <div class="text-muted text-decoration-line-through small">
                                            @product.BasePrice.ToString("N0") đ
                                        </div>
                                        <div class="text-danger fw-bold">
                                            @product.SalePrice.Value.ToString("N0") đ
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="fw-semibold">
                                            @product.BasePrice.ToString("N0") đ
                                        </div>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (product.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-x-circle"></i> Inactive
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (product.IsFeatured)
                                    {
                                        <i class="bi bi-star-fill text-warning fs-5"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-star text-muted"></i>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@product.Id" 
                                           class="btn btn-outline-primary" 
                                           title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@product.Id" 
                                              method="post" class="d-inline" 
                                              onsubmit="return confirm('Are you sure you want to delete this product?');">
                                            <button class="btn btn-outline-danger" type="submit" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-5 text-muted">
                                <i class="bi bi-inbox display-4 d-block mb-3"></i>
                                <p class="mb-0">No products found</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (Model?.TotalPages > 1)
    {
        <div class="card-footer bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                    Showing @Model.Items.Count() of @Model.TotalCount products
                </div>
                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        @if (Model.Page > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page - 1)" 
                                   asp-route-search="@searchQuery" asp-route-categoryId="@selectedCategoryId" asp-route-brandId="@selectedBrandId" asp-route-status="@ViewBag.CurrentStatus">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>
                        }
                        
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.Page ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i" 
                                   asp-route-search="@searchQuery" asp-route-categoryId="@selectedCategoryId" asp-route-brandId="@selectedBrandId" asp-route-status="@ViewBag.CurrentStatus">
                                    @i
                                </a>
                            </li>
                        }
                        
                        @if (Model.Page < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page + 1)" 
                                   asp-route-search="@searchQuery" asp-route-categoryId="@selectedCategoryId" asp-route-brandId="@selectedBrandId" asp-route-status="@ViewBag.CurrentStatus">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    }
</div>

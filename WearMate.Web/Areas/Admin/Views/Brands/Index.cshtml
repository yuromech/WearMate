@model List<WearMate.Shared.DTOs.Products.BrandDto>
@{
    ViewData["Title"] = "Brands Management";
    var includeInactive = ViewBag.IncludeInactive as bool? ?? false;
    var search = ViewBag.Search as string ?? string.Empty;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0"><i class="bi bi-award"></i> Brands</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add Brand
    </a>
</div>

<form method="get" class="card mb-3 shadow-sm">
    <div class="card-body row g-3 align-items-center">
        <div class="col-md-5">
            <label class="form-label fw-semibold">Search</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-search"></i></span>
                <input type="text" name="search" value="@search" class="form-control" placeholder="Name or slug" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-check form-switch mt-4 pt-2">
                <input class="form-check-input" type="checkbox" role="switch" id="includeInactive" name="includeInactive" value="true" @(includeInactive ? "checked" : "") />
                <label class="form-check-label" for="includeInactive">Show inactive</label>
            </div>
        </div>
        <div class="col-md-4 text-md-end d-flex gap-2 justify-content-md-end">
            <button type="submit" class="btn btn-outline-secondary mt-3 mt-md-0">
                <i class="bi bi-filter-circle"></i> Apply
            </button>
            <a asp-action="Index" class="btn btn-outline-light border mt-3 mt-md-0">
                <i class="bi bi-arrow-counterclockwise"></i> Reset
            </a>
        </div>
    </div>
</form>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width: 30%">Brand</th>
                        <th>Slug</th>
                        <th class="text-center" style="width: 12%">Status</th>
                        <th style="width: 15%">Created</th>
                        <th class="text-end" style="width: 20%">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var brand in Model)
                        {
                            <tr class="@(!brand.IsActive ? "table-secondary" : "")">
                                <td>
                                    <div class="d-flex align-items-center gap-3">
                                        <img src="@(string.IsNullOrWhiteSpace(brand.LogoUrl) ? "https://placehold.co/64x64?text=LOGO" : brand.LogoUrl)"
                                             class="rounded border" style="width:64px;height:64px;object-fit:cover;" alt="@brand.Name" />
                                        <div>
                                            <div class="fw-semibold">@brand.Name</div>
                                            @if (!string.IsNullOrWhiteSpace(brand.Description))
                                            {
                                                <div class="text-muted small">@brand.Description</div>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td><code>@brand.Slug</code></td>
                                <td class="text-center">
                                    @if (brand.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>@brand.CreatedAt.ToString("yyyy-MM-dd")</td>
                                <td class="text-end">
                                    <div class="d-inline-flex gap-2">
                                        <a asp-action="Edit" asp-route-id="@brand.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        @if (brand.IsActive)
                                        {
                                            <form asp-action="Deactivate" asp-route-id="@brand.Id" method="post" class="d-inline" onsubmit="return confirm('Deactivate this brand?');">
                                                <button type="submit" class="btn btn-sm btn-warning">
                                                    <i class="bi bi-eye-slash"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form asp-action="Reactivate" asp-route-id="@brand.Id" method="post" class="d-inline" onsubmit="return confirm('Reactivate this brand?');">
                                                <button type="submit" class="btn btn-sm btn-success">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                            </form>
                                        }
                                        <form asp-action="Delete" asp-route-id="@brand.Id" method="post" class="d-inline" onsubmit="return confirm('Delete this brand? This cannot be undone.');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                No brands found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@{
    ViewData["Title"] = "User Detail";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-person-circle"></i> User Detail</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Users
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-3">
            <div class="card-header">
                <h5 class="mb-0">User Information</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4"><strong>Email:</strong></div>
                    <div class="col-md-8"><span>user@example.com</span></div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4"><strong>Full Name:</strong></div>
                    <div class="col-md-8"><span>John Doe</span></div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4"><strong>Role:</strong></div>
                    <div class="col-md-8"><span class="badge bg-secondary">Customer</span></div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4"><strong>Status:</strong></div>
                    <div class="col-md-8"><span class="badge bg-success">Active</span></div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4"><strong>Created:</strong></div>
                    <div class="col-md-8"><span>01/01/2024</span></div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4"><strong>Last Login:</strong></div>
                    <div class="col-md-8"><span>15/01/2024 10:30 AM</span></div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">User Statistics</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="text-center">
                            <h3>15</h3>
                            <small class="text-muted">Total Orders</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-center">
                            <h3>1,500,000</h3>
                            <small class="text-muted">Total Spent</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-center">
                            <h3>5</h3>
                            <small class="text-muted">Reviews</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-center">
                            <h3>3</h3>
                            <small class="text-muted">Wishlist Items</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Actions</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label">Change Role</label>
                        <select class="form-select">
                            <option>Customer</option>
                            <option>Staff</option>
                            <option>Admin</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 mb-2">
                        <i class="bi bi-save"></i> Update Role
                    </button>
                </form>

                <hr />

                <button class="btn btn-warning w-100 mb-2" data-bs-toggle="modal" data-bs-target="#resetPasswordModal">
                    <i class="bi bi-key"></i> Reset Password
                </button>

                <button class="btn btn-danger w-100">
                    <i class="bi bi-trash"></i> Delete User
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Reset Password Modal -->
<div class="modal fade" id="resetPasswordModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reset Password</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-action="ResetPassword">
                <div class="modal-body">
                    <p>Are you sure you want to reset the password for this user?</p>
                    <p class="text-muted small">A password reset email will be sent to the user.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Send Reset Email</button>
                </div>
            </form>
        </div>
    </div>
</div>

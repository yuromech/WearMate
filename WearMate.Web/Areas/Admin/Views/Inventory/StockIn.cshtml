@using System.Text.Json
@model WearMate.Shared.DTOs.Inventory.StockInDto
@{
    ViewData["Title"] = "Stock In";
    var warehouses = ViewBag.Warehouses as List<WearMate.Shared.DTOs.Inventory.WarehouseDto> ?? new();
    var products = ViewBag.Products as List<WearMate.Shared.DTOs.Products.ProductDto> ?? new();
    var selectedVariantId = Model?.ProductVariantId ?? Guid.Empty;
    var selectedProductId = products.FirstOrDefault(p => p.Variants?.Any(v => v.Id == selectedVariantId) == true)?.Id ?? Guid.Empty;
}

<h2><i class="bi bi-plus-circle"></i> Stock In</h2>

<div class="card">
    <div class="card-body">
        <form asp-action="StockIn" method="post">
            <div class="mb-3">
                <label asp-for="WarehouseId" class="form-label">Warehouse *</label>
                <select asp-for="WarehouseId" class="form-select" required>
                    <option value="">-- Select Warehouse --</option>
                    @foreach (var warehouse in warehouses)
                    {
                        <option value="@warehouse.Id">@warehouse.Name (@warehouse.Code)</option>
                    }
                </select>
                <span asp-validation-for="WarehouseId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Product *</label>
                <select id="productSelect" class="form-select">
                    <option value="">-- Select Product --</option>
                    @foreach (var product in products)
                    {
                        <option value="@product.Id">@product.Name</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="ProductVariantId" class="form-label">Product Variant *</label>
                <select asp-for="ProductVariantId" class="form-select" id="variantSelect" required>
                    <option value="">-- Select Product Variant --</option>
                </select>
                <span asp-validation-for="ProductVariantId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Quantity" class="form-label">Quantity *</label>
                <input asp-for="Quantity" class="form-control" type="number" min="1" required />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Note" class="form-label">Note</label>
                <textarea asp-for="Note" class="form-control" rows="3"></textarea>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save"></i> Stock In
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (() => {
            const products = @Html.Raw(JsonSerializer.Serialize(products));
            const productSelect = document.getElementById('productSelect');
            const variantSelect = document.getElementById('variantSelect');
            const initialProductId = "@selectedProductId";
            const initialVariantId = "@selectedVariantId";

            function renderVariants(productId, preselectVariantId = "") {
                variantSelect.innerHTML = '<option value=\"\">-- Select Product Variant --</option>';
                if (!productId) return;
                const product = products.find(p => (p.id || p.Id) === productId);
                const variants = product?.variants || product?.Variants;
                if (!product || !variants) return;

                variants.forEach(v => {
                    const name = product.name || product.Name || '';
                    const size = v.size ?? v.Size ?? '';
                    const color = v.color ?? v.Color ?? '';
                    const sku = v.sku ?? v.Sku ?? '';
                    const label = `${name} - ${size} ${color} (${sku})`.trim();
                    const opt = document.createElement('option');
                    opt.value = v.id || v.Id;
                    opt.textContent = label;
                    if (preselectVariantId && (v.id === preselectVariantId || v.Id === preselectVariantId)) {
                        opt.selected = true;
                    }
                    variantSelect.appendChild(opt);
                });
            }

            productSelect?.addEventListener('change', (e) => renderVariants(e.target.value));

            if (initialProductId) {
                productSelect.value = initialProductId;
                renderVariants(initialProductId, initialVariantId);
            }
        })();
    </script>
}

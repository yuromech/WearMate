@using WearMate.Web.Models.ViewModels
@model InventoryIndexViewModel
@{
    ViewData["Title"] = "Inventory Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-box"></i> Inventory Management</h2>
    <div class="btn-group">
        <a asp-action="StockIn" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Stock In
        </a>
        <a asp-action="StockOut" class="btn btn-warning">
            <i class="bi bi-dash-circle"></i> Stock Out
        </a>
        <a asp-action="Transfer" class="btn btn-info">
            <i class="bi bi-arrow-left-right"></i> Transfer
        </a>
        <a asp-action="Logs" class="btn btn-secondary">
            <i class="bi bi-clock-history"></i> View Logs
        </a>
        <a asp-action="Warehouses" class="btn btn-outline-dark">
            <i class="bi bi-building"></i> Warehouses
        </a>
    </div>
</div>

<!-- Warehouses Overview -->
<div class="row mb-4">
    @foreach (var warehouse in Model.Warehouses)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-building"></i> @warehouse.Name</h5>
                    <p class="mb-1"><strong>Code:</strong> <code>@warehouse.Code</code></p>
                    @if (!string.IsNullOrEmpty(warehouse.Address))
                    {
                        <p class="mb-1"><small class="text-muted">@warehouse.Address</small></p>
                    }
                    @if (!string.IsNullOrEmpty(warehouse.Phone))
                    {
                        <p class="mb-1"><small class="text-muted">📞 @warehouse.Phone</small></p>
                    }
                    <span class="badge @(warehouse.IsActive ? "bg-success" : "bg-secondary")">
                        @(warehouse.IsActive ? "Active" : "Inactive")
                    </span>
                </div>
            </div>
        </div>
    }
</div>

<!-- Low Stock Alert -->
<div class="card">
    <div class="card-header bg-warning text-white">
        <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Low Stock Alert (Quantity < 10)</h5>
    </div>
    <div class="card-body">
        @if (Model.LowStock.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Warehouse</th>
                            <th>Product Variant ID</th>
                            <th>Quantity</th>
                            <th>Reserved</th>
                            <th>Available</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.LowStock)
                        {
                            <tr class="@(item.AvailableQuantity == 0 ? "table-danger" : "table-warning")">
                                <td>@item.Warehouse?.Name</td>
                                <td><code>@item.ProductVariantId</code></td>
                                <td><strong>@item.Quantity</strong></td>
                                <td>@item.ReservedQuantity</td>
                                <td>
                                    <span class="badge bg-danger">@item.AvailableQuantity</span>
                                </td>
                                <td>
                                    <a asp-action="StockIn" class="btn btn-sm btn-success">
                                        <i class="bi bi-plus"></i> Restock
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-success mb-0">
                <i class="bi bi-check-circle"></i> All products are well stocked!
            </div>
        }
    </div>
</div>

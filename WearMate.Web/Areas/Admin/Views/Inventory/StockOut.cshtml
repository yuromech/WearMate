@model WearMate.Shared.DTOs.Inventory.StockOutDto
@{
    ViewData["Title"] = "Stock Out";
    var warehouses = ViewBag.Warehouses as List<WearMate.Shared.DTOs.Inventory.WarehouseDto> ?? new();
    var productsResult = ViewBag.Products as WearMate.Shared.DTOs.Common.PaginatedResult<WearMate.Shared.DTOs.Products.ProductDto>;
}

<h2><i class="bi bi-dash-circle"></i> Stock Out</h2>

<div class="alert alert-warning">
    <i class="bi bi-exclamation-triangle"></i> <strong>Warning:</strong> Stock out will reduce inventory. Ensure sufficient quantity is available.
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="StockOut" method="post">
            <div class="mb-3">
                <label asp-for="WarehouseId" class="form-label">Warehouse *</label>
                <select asp-for="WarehouseId" class="form-select" required>
                    <option value="">-- Select Warehouse --</option>
                    @foreach (var warehouse in warehouses)
                    {
                        <option value="@warehouse.Id">@warehouse.Name (@warehouse.Code)</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="ProductVariantId" class="form-label">Product Variant *</label>
                <select asp-for="ProductVariantId" class="form-select" required>
                    <option value="">-- Select Product Variant --</option>
                    @if (productsResult?.Items != null)
                    {
                        @foreach (var product in productsResult.Items)
                        {
                            @if (product.Variants.Any())
                            {
                                @foreach (var variant in product.Variants)
                                {
                                    <option value="@variant.Id">
                                        @product.Name - @variant.Size @variant.Color (@variant.Sku)
                                    </option>
                                }
                            }
                        }
                    }
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="Quantity" class="form-label">Quantity *</label>
                <input asp-for="Quantity" class="form-control" type="number" min="1" required />
            </div>

            <div class="mb-3">
                <label asp-for="Note" class="form-label">Note</label>
                <textarea asp-for="Note" class="form-control" rows="3" placeholder="Reason for stock out..."></textarea>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-warning">
                    <i class="bi bi-save"></i> Stock Out
                </button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}